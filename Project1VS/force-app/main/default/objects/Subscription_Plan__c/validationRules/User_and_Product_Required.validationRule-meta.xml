<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>User_and_Product_Required</fullName>
    <active>true</active>
    <errorConditionFormula>OR( ISBLANK( User__c ), ISBLANK( Product__c) )</errorConditionFormula>
    <errorMessage>Neither the user nor the product may be left blank.</errorMessage>
</ValidationRule>
